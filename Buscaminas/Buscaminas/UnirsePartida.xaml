        <Button Content="Iniciar"  x:Name="Iniciar" HorizontalAlignment="Left" Margin="199,199,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="Cancelar" x:Name="Cancelar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="199,241,0,0" Click="Button_Click"/>

    </Grid>
</Window>
