<Window x:Class="Buscaminas.UnirsePartida"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Buscaminas"
        mc:Ignorable="d"
        Title="CrearPartida" Height="340.336" Width="459.664">
    <Grid>
        <Image Source="fondo1.png" Stretch="Fill"/>

        <TextBlock HorizontalAlignment="Left" Margin="49,111,0,0" TextWrapping="Wrap" x:Name="Mensaje" VerticalAlignment="Top" Height="56" Width="392" FontSize="22" FontFamily="Arial Black" Text="Se iniciará la partida con el jugador:" Foreground="#FFFBF9F9"/>
